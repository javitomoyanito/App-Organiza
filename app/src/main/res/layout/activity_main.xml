<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".inicio">


    <ImageView
        android:id="@+id/iv_foto_perfil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Foto de perfil" />

    <TextView
        android:id="@+id/tv_nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="Cargando nombre..."
        android:textSize="22sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Con OrganizApp tu puedes"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="Mi logo 1"
            android:src="@drawable/desordenado" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="Mi logo 2"
            android:src="@drawable/ordenado" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="65dp"
            android:textColor="@color/white"
            android:text="ANTES"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:textColor="@color/white"
            android:text="DESPUES"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/azulitogod"
        android:textColor="@color/white"
        android:text="Â¡Empieza ya!"
        >
    </com.google.android.material.button.MaterialButton>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:text="VERSION ACTUAL ORGANIZAPP "
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            android:textSize="12sp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"

        android:text="v0.1.0-alpha"
        android:textSize="12sp"
        />


</LinearLayout>